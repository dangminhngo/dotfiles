configuration {
  font:                           "Jetka Medium 11";
  show-icons:                     true;
  icon-theme:                     "Papirus-Dark";
  display-window:                 "Windows";
  disable-history:                false;
  sidebar-mode:                   false;
  window-format:                  "[{w}] | {c}: {t}";
}

@import "./theme.rasi"

window {
  transparency:                   "real";
  background-color:               @bg0;
  text-color:                     @gray;
  border:                         1px;
  border-color:                   @bg2;
  border-radius:                  4px;
  width:                          600px;
  location:                       center;
  x-offset:                       0px;
  y-offset:                       0px;
}

prompt {
  enabled:                        true;
  padding:                        1% 0.75% 1% 0.75%;
  background-color:               @blue;
  text-color:                     @bg;
  border-radius:                  4px;
  font:                           "Jetka Medium 11";
}

textbox-prompt-colon {
  padding:                        10px;
  background-color:               @bg0;
  text-color:                     @gray;
  expand:                         false;
  str:                            " :: ";
}

entry {
  background-color:               @none;
  text-color:                     @gray;
  placeholder-color:              @gray;
  expand:                         true;
  horizontal-align:               0;
  placeholder:                    "Search...";
  padding:                        1.15% 0.5% 1% 0.5%;
  blink:                          true;
}

inputbar {
  children:                       [ prompt, entry ];
  background-color:               @bg;
  text-color:                     @gray;
  expand:                         false;
  border:                         0% 0% 0% 0%;
  border-radius:                  4px;
  border-color:                   @blue;
}

listview {
  background-color:               @none;
  padding:                        0px;
  columns:                        1;
  lines:                          6;
  spacing:                        1%;
  cycle:                          false;
  dynamic:                        true;
  layout:                         vertical;
}

mainbox {
  background-color:               @none;
  border:                         0% 0% 0% 0%;
  border-radius:                  0% 0% 0% 0%;
  border-color:                   @blue;
  children:                       [ inputbar, listview ];
  spacing:                        12px;
  padding:                        12px;
}

element {
  background-color:               @bg;
  text-color:                     @gray;
  orientation:                    horizontal;
  border-radius:                  4px;
  padding:                        10px 20px;
}

element-icon {
  background-color:               inherit;
  text-color:                     inherit;
  horizontal-align:               0.5;
  vertical-align:                 0.5;
  size:                           16px;
  border:                         0px;
}

element-text {
  background-color:               @none;
  text-color:                     inherit;
  expand:                         true;
  horizontal-align:               0;
  vertical-align:                 0.5;
  margin:                         0 10px;
}

element selected {
  background-color:               @bg2;
  text-color:                     @blue;
  border:                         0px 0px 4px 4px;
  border-radius:                  4px;
  border-color:                   @blue;
}
